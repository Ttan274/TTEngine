<Window x:Class="TTEngine.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTEngine.Editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer 
                      Grid.Column="0"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">

            <Canvas x:Name="MapCanvas"
                    Background="Transparent"
                    MouseDown="Canvas_MouseDown"
                    MouseMove="Canvas_MouseMove"
                    MouseUp="Canvas_MouseUp"
                    MouseLeave="Canvas_MouseLeave"/>
        </ScrollViewer>

        <!-- TOOL PANEL -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Tiles" FontWeight="Bold"/>

            <RadioButton Content="Ground"
                         IsChecked="True"
                         GroupName="TileGroup"
                         Name="GroundRadio"/>

            <RadioButton Content="Wall"
                         GroupName="TileGroup"
                         Name="WallRadio"/>

            <TextBlock  Text="Brush Size"
                        Margin="0,10,0,0"
                        FontWeight="Bold"/>

            <TextBlock x:Name="BrushSizeLabel"
                        Text="Size: 1x1"/>
            
            <Slider x:Name="BrushSizeSlider"
                    Minimum="1"
                    Maximum="3"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    ValueChanged="BrushSizeSlider_ValueChanged"/>

            <Button Content="Save Map"
                    Margin="0,10,0,0"
                    Click="SaveMap_Click"/>

            <Button Content="Load Map"
                    Margin="0,5,0,0"
                    Click="LoadMap_Click"/>

            <RadioButton Content="Brush"
             IsChecked="True"
                          GroupName="ToolGroup"
             Checked="BrushTool_Checked"/>

            <RadioButton    Content="Fill"
                            Margin="0,5,0,0"
                            GroupName="ToolGroup"
                            Checked="FillTool_Checked"/>

            <RadioButton    Content="Player Spawn"
                            Margin="0,6,0,0"
                            GroupName="ToolGroup"
                            Checked="PlayerSpawnTool_Checked"/>
            
            <RadioButton    Content="Enemy Spawn"
                            Margin="0,6,0,0"
                            GroupName="ToolGroup"
                            Checked="EnemySpawnTool_Checked"/>
            

            <Button Content="Start Game"
                    Margin="0,10,0,0"
                    Click="StartGame_Click"/>
        </StackPanel>
    </Grid>
</Window>
