<Window x:Class="TTEngine.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTEngine.Editor"
        xmlns:panels="clr-namespace:TTEngine.Editor.Panels"
        mc:Ignorable="d"
        Title="TTEngine Editor"
        Height="600"
        Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: TILE TOOLS -->
        <panels:TileToolPanel   x:Name="TileTools"
                                Grid.Column="0"/>

        <!-- CENTER: MAP -->
        <ScrollViewer Grid.Column="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="MapCanvas"
                    Background="Transparent"
                    MouseDown="Canvas_MouseDown"
                    MouseMove="Canvas_MouseMove"
                    MouseUp="Canvas_MouseUp"
                    MouseLeave="Canvas_MouseLeave"/>
        </ScrollViewer>

        <!-- RIGHT: INSPECTOR -->
        <panels:InspectorPanel  x:Name="Inspector"
                                Grid.Column="2"/>
    </Grid>
</Window>
