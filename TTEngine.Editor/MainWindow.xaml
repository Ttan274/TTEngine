<Window x:Class="TTEngine.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTEngine.Editor"
        xmlns:panels="clr-namespace:TTEngine.Editor.Panels"
        mc:Ignorable="d"
        Title="TTEngine Editor"
        Height="600"
        Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: TILE TOOL PANEL + LAYER PANEL + CONSOLE PANEL -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Layers -->
                <RowDefinition Height="Auto"/>
                <!-- Tile Tools -->
                <RowDefinition Height="*"/>
                <!-- Spacer -->
                <RowDefinition Height="180"/>
                <!-- Console -->
            </Grid.RowDefinitions>

            <panels:LayerPanel x:Name="LayerEditor" Grid.Row="0"/>
            <panels:TileToolPanel x:Name="TileTools" Grid.Row="1"/>

            <!-- CONSOLE -->
            <panels:EditorConsolePanel x:Name="ConsoleEditor" Grid.Row="3"/>
        </Grid>


        <!-- CENTER: MAP -->
        <ScrollViewer Grid.Column="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="MapCanvas"
                    Background="Transparent"
                    MouseDown="Canvas_MouseDown"
                    MouseMove="Canvas_MouseMove"
                    MouseUp="Canvas_MouseUp"
                    MouseLeave="Canvas_MouseLeave"/>
        </ScrollViewer>

        <!-- RIGHT: INSPECTOR -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <panels:InspectorPanel  x:Name="Inspector" Grid.Row="0"/>
            <panels:ToolHostPanel  x:Name="ToolHost" Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
