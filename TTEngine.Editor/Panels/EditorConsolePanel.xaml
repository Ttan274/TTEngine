<UserControl x:Class="TTEngine.Editor.Panels.EditorConsolePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#1E1E1E" Padding="6">
        <StackPanel>

            <TextBlock Text="Console"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="0,0,0,4"/>

            <ListBox ItemsSource="{Binding Console.Messages}"
                     Background="#121212"
                     Foreground="LightGray"
                     BorderThickness="0"
                     FontFamily="Consolas"
                     FontSize="12"/>

        </StackPanel>
    </Border>
</UserControl>
