<UserControl x:Class="TTEngine.Editor.Panels.TileManagementPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TTEngine.Editor.Enums"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="CollisionTypes"
                            MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:CollisionType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>


    <StackPanel Margin="10" Width="220" Background="Wheat">

        <!-- TILE SELECT -->
        <TextBlock Text="Tile"
                   FontWeight="Bold"
                   Margin="0,0,0,4"/>

        <ComboBox ItemsSource="{Binding TileDefinitions}"
                  SelectedItem="{Binding SelectedTile}"
                  DisplayMemberPath="Name"
                  Margin="0,0,0,10"/>

        <!-- TILE NAME -->
        <TextBlock Text="Name"/>
        <TextBox Text="{Binding SelectedTile.Name, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,0,8"/>

        <!-- COLLISION TYPE -->
        <TextBlock Text="Collision"/>
        <ComboBox ItemsSource="{Binding Source={StaticResource CollisionTypes}}"
                      SelectedItem="{Binding SelectedTile.CollisionType}"
                      Margin="0,4,0,14"/>

        <!-- SPRITE PREVIEW -->
        <TextBlock  Text="Sprite"
                    Margin="0,0,0,4"/>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="SpritePathTextBox"
                     Width="160"/> 

            <Button  Content="..."
              Width="50"
              Margin="4,0,0,0"
              Click="BrowseSprite_Click"/>
        </StackPanel>

        <Border     Width="128"
                    Height="128"
                    BorderBrush="DimGray"
                    BorderThickness="1"
                    Margin="0,20,0,0">

                    <Image x:Name="SpritePreview"
                           Stretch="Uniform"/>
        </Border>


        <!-- ACTIONS -->
        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
            <Button Content="Add"
                    Width="60"
                    Click="Add_Click"/>
            <Button Content="Save"
                    Width="60"
                    Margin="6,0,0,0"
                    Click="Save_Click"/>
            <Button Content="Remove"
                    Width="70"
                    Margin="6,0,0,0"
                    Click="Remove_Click"/>
        </StackPanel>

    </StackPanel>
</UserControl>
