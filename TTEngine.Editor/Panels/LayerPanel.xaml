<UserControl x:Class="TTEngine.Editor.Panels.LayerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#2B2B2B" Padding="8">
        <StackPanel>
            <TextBlock Text="LAYERS"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>

            <ItemsControl ItemsSource="{Binding Layers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <Border Padding="6" Margin="0,2">
                            <!-- ACTIVE HIGHLIGHT -->
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <Setter Property="Background" Value="#FF3C3C3C"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <DockPanel>

                                <!-- VISIBILITY -->
                                <CheckBox IsChecked="{Binding IsVisible}"
                              Content="👁"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,6,0"/>

                                <!-- LOCK -->
                                <CheckBox IsChecked="{Binding IsLocked}"
                              Content="🔒"
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,6,0"/>

                                <!-- LAYER NAME (CLICK = SET ACTIVE) -->
                                <TextBlock Text="{Binding LayerType}"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Cursor="Hand"
                               MouseDown="Layer_Click"/>
                            </DockPanel>

                        </Border>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        </StackPanel>
    </Border>
</UserControl>
