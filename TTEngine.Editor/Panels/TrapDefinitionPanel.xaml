<UserControl x:Class="TTEngine.Editor.Panels.TrapDefinitionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10"
                    Width="260"
                    Background="Wheat">

            <!-- ADD / DELETE -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,8">

                <Button Content="Add"
                        Width="80"
                        Margin="0,0,6,0"
                        Click="AddClick"/>

                <Button Content="Delete"
                        Width="80"
                        Click="DeleteClick"/>
            </StackPanel>

            <TextBlock Text="Trap Definitions"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>

            <!-- LIST -->
            <ListBox ItemsSource="{Binding Traps}"
                     SelectedItem="{Binding SelectedTrap}"
                     DisplayMemberPath="Id"
                     Height="120"
                     Margin="0,0,0,10"/>

            <!-- COMMON -->
            <TextBlock Text="Id"/>
            <TextBox Text="{Binding SelectedTrap.Id}"
                     Margin="0,0,0,6"/>

            <!-- IMAGE -->
            <TextBlock Text="Image"
                       FontWeight="Bold"
                       Margin="0,6,0,4"/>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,6">
                <TextBox Text="{Binding SelectedTrap.ImagePath}"
                         Width="180"
                         IsReadOnly="True"/>
                <Button Content="..."
                        Width="40"
                        Margin="4,0,0,0"
                        Click="BrowseImageClick"/>
            </StackPanel>

            <!-- PREVIEW -->
            <Border BorderBrush="#666"
                    BorderThickness="1"
                    Height="100"
                    Margin="0,0,0,10">
                <Image x:Name="PreviewImage"
                       Stretch="Uniform"/>
            </Border>

            <!-- FIRE SETTINGS -->
            <StackPanel Margin="0,6,0,0"
                        Visibility="{Binding IsFireTrap, Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="Fire Trap"
                           FontWeight="Bold"/>

                <TextBlock Text="Active Duration"/>
                <TextBox Text="{Binding SelectedTrap.ActiveDuration}"/>

                <TextBlock Text="Inactive Duration"/>
                <TextBox Text="{Binding SelectedTrap.InactiveDuration}"/>

                <TextBlock Text="Damage / sec"/>
                <TextBox Text="{Binding SelectedTrap.DamagePerSecond}"/>
            </StackPanel>

            <!-- SAW SETTINGS -->
            <StackPanel Margin="0,6,0,0"
                        Visibility="{Binding IsSawTrap, Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="Saw Trap"
                           FontWeight="Bold"/>

                <TextBlock Text="Speed"/>
                <TextBox Text="{Binding SelectedTrap.Speed}"/>

                <TextBlock Text="Damage"/>
                <TextBox Text="{Binding SelectedTrap.Damage}"/>

                <TextBlock Text="Damage Cooldown"/>
                <TextBox Text="{Binding SelectedTrap.DamageCooldown}"/>
            </StackPanel>

            <Button Content="Save"
                    Margin="0,10,0,0"
                    Click="SaveClick"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
