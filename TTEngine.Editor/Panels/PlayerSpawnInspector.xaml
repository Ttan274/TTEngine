<UserControl x:Class="TTEngine.Editor.Panels.PlayerSpawnInspector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="8" Background="Wheat">

        <TextBlock Text="Player Spawn"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,6"/>

        <!-- Position -->
        <TextBlock x:Name="PositionText"
                   Margin="0,0,0,6"/>

        <Separator Margin="0,6"/>

        <!-- Definition -->
        <TextBlock x:Name="TypeText"
                   FontWeight="SemiBold"
                   Margin="0,0,0,4"/>

        <!-- Stats -->
        <TextBlock x:Name="StatsText"/>
    </StackPanel>
</UserControl>