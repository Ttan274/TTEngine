<UserControl x:Class="TTEngine.Editor.Panels.LevelsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="10" Background="Wheat">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT : LEVEL LIST -->
        <StackPanel Grid.Column="0">

            <TextBlock Text="Levels"
                       FontWeight="Bold"
                       Margin="0,0,0,6"/>

            <ListBox ItemsSource="{Binding Levels}"
                     SelectedItem="{Binding SelectedLevel}"
                     DisplayMemberPath="Id"
                     Height="220"/>

            <StackPanel Orientation="Horizontal"
                        Margin="0,6,0,0">
                <Button Content="Add"
                        Width="60"
                        Margin="0,0,6,0"
                        Click="AddLevelClick"/>
                <Button Content="Delete"
                        Width="60"
                        Click="DeleteLevelClick"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,6,0,0">
                <Button Content="↑"
                        Width="30"
                        Click="MoveUpClick"/>
                <Button Content="↓"
                        Width="30"
                        Margin="6,0,0,0"
                        Click="MoveDownClick"/>
            </StackPanel>

        </StackPanel>

        <!-- RIGHT : LEVEL DETAILS -->
        <StackPanel Grid.Column="1"
                    Margin="10,0,0,0">

            <TextBlock Text="Level Settings"
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>

            <TextBlock Text="Id"/>
            <TextBox Text="{Binding SelectedLevel.Id}"
                     Margin="0,0,0,8"/>

            <CheckBox Content="Active (Unlocked)"
                      IsChecked="{Binding SelectedLevel.IsActive}"
                      Margin="0,0,0,8"/>

            <TextBlock  Text="Map"
                        Margin="0,6,0,2"/>

            <ComboBox ItemsSource="{Binding AvailableMaps}"
                      SelectedItem="{Binding SelectedLevel.MapId}"
                      IsEnabled="{Binding SelectedLevel}"
                      />    

            <!-- ileride Map dropdown olacak -->

        </StackPanel>
    </Grid>
</UserControl>
