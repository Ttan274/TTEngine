<UserControl x:Class="TTEngine.Editor.Panels.InteractableInspector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="10" Background="Wheat">
        <TextBlock Text="Interactable"
               FontWeight="Bold"
               FontSize="14"
               Margin="0,0,0,8"/>

        <TextBlock Text="Definition Id"/>
        <TextBox Text="{Binding DefinitionId, Mode=OneWay}"
             IsReadOnly="True"
             Margin="0,0,0,6"/>

        <TextBlock Text="Type"/>
        <TextBox Text="{Binding Type, Mode=OneWay}"
             IsReadOnly="True"
             Margin="0,0,0,6"/>
    </StackPanel>
</UserControl>
    
    
