<UserControl x:Class="TTEngine.Editor.Panels.EntityDefinitionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="8" Background="Wheat">

            <TextBlock Text="Entity Definitions"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,8"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Button Content="New Def" Width="60" Margin="0,0,6,0" Click="NewDefClicked"/>
                <Button Content="Delete" Width="60" Click="DeleteDefClicked" />
            </StackPanel>

            <!-- Dropdown -->
            <TextBlock Text="Entity Type"/>
            <ComboBox x:Name="DefinitionCombo"
                      SelectionChanged="OnDefinitionChanged"
                      Margin="0,0,0,8"/>

            <!-- Stats -->
            <TextBlock Text="Speed"/>
            <TextBox x:Name="SpeedBox"/>

            <TextBlock Text="Attack Damage" Margin="0,6,0,0"/>
            <TextBox x:Name="AttackDamageBox"/>

            <TextBlock Text="Attack Interval" Margin="0,6,0,0"/>
            <TextBox x:Name="AttackIntervalBox"/>

            <TextBlock Text="Max HP" Margin="0,6,0,0"/>
            <TextBox x:Name="MaxHpBox"/>

            <!-- TEXTURES -->

            <!--Idle Texture Area-->
            <TextBlock Text="Idle Texture" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="IdleTextureBox"
                         Width="200"
                         TextChanged="OnIdleTextureChanged"/>

                <Button  Content="..."
                         Width="50"
                         Margin="4,0,0,0"
                         Click="BrowseIdleTexture"/>
            </StackPanel>
            
            <Border BorderThickness="1.5"
                    Margin="0, 5, 0, 5"
                    BorderBrush="#666">
                
                <Image  x:Name="IdlePreview"
                    Width="256"
                    Height="128"
                    Margin="0,4,0,0"
                    Stretch="Uniform"
                    StretchDirection="DownOnly"/>
            </Border>
            
            <!--Walk Texture Area-->
            <TextBlock Text="Walk Texture" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="WalkTextureBox"
                         Width="200"
                         TextChanged="OnWalkTextureChanged"/>

                <Button  Content="..."
                         Width="50"
                         Margin="4,0,0,0"
                         Click="BrowseWalkTexture"/>
            </StackPanel>
            <Border     BorderThickness="1.5"
                        Margin="0, 5, 0, 5"
                        BorderBrush="#666">
                        <Image  x:Name="WalkPreview"
                                Width="256"
                                Height="128"
                                Margin="0,4,0,0"
                                Stretch="Uniform"
                                StretchDirection="DownOnly"/>
            </Border>
            
            <!--Hurt Texture Area-->
            <TextBlock Text="Hurt Texture" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox    x:Name="HurtTextureBox"
                            Width="200"
                            TextChanged="OnHurtTextureChanged"/>

                <Button     Content="..."
                            Width="50"
                            Margin="4,0,0,0"
                            Click="BrowseHurtTexture"/>
            </StackPanel>
            <Border     BorderThickness="1.5"
                        Margin="0, 5, 0, 5"
                        BorderBrush="#666">
                <Image      x:Name="HurtPreview"
                        Width="128"
                        Height="128"
                        Margin="0,4,0,0"
                        Stretch="Uniform"
                        StretchDirection="DownOnly"/>
            </Border>
            
            
            <!--Death Texture Area-->
            <TextBlock Text="Death Texture" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox    x:Name="DeathTextureBox"
                            Width="200"
                            TextChanged="OnDeathTextureChanged"/>

                <Button     Content="..."
                            Width="50"
                            Margin="4,0,0,0"
                            Click="BrowseDeathTexture"/>
            </StackPanel>
            <Border BorderThickness="1.5"
                    Margin="0, 5, 0, 5"
                    BorderBrush="#666">
                <Image      x:Name="DeathPreview"
                        Width="128"
                        Height="128"
                        Margin="0,4,0,0"
                        Stretch="Uniform"
                        StretchDirection="DownOnly"/>
            </Border>

            <!--Attack Textures-->
            <TextBlock Text="Attack Textures" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <Button  Content="Add"
                         Width="120"
                         Margin="5,0,6,0"
                         Click="AddAttackTexture"/>

                <Button  Content="Remove"
                         Width="120"
                         Margin="0,0,6,0"
                         Click="RemoveAttackTexture"/>

            </StackPanel>

            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled"
                          Height="150">

                <ItemsControl x:Name="AttackTextureList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#666"
                        BorderThickness="1"
                        Margin="4"
                        Padding="4"
                        Background="#222">
                                <Image Source="{Binding}"
                           Width="96"
                           Height="96"
                           Stretch="Uniform"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </ScrollViewer>
            
            <!--Save Button-->
            <Button Content="Save Definitions"
                    Margin="0,10,0,0"
                    Click="SaveClicked"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>