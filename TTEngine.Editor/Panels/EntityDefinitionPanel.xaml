<UserControl x:Class="TTEngine.Editor.Panels.EntityDefinitionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="8" Background="Wheat">

            <TextBlock Text="Entity Definitions"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,8"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <Button Content="New Def" Width="60" Margin="0,0,6,0" Click="NewDefClicked"/>
                <Button Content="Delete" Width="60" Click="DeleteDefClicked" />
            </StackPanel>

            <!-- ENTITY SELECTION -->
            <TextBlock Text="Entity Type"/>
            <ComboBox x:Name="DefinitionCombo"
                      SelectionChanged="OnDefinitionChanged"
                      Margin="0,0,0,8"/>

            <!-- STATS -->
            <TextBlock Text="Speed"/>
            <TextBox x:Name="SpeedBox"/>

            <TextBlock Text="Attack Damage" Margin="0,6,0,0"/>
            <TextBox x:Name="AttackDamageBox"/>

            <TextBlock Text="Attack Interval" Margin="0,6,0,0"/>
            <TextBox x:Name="AttackIntervalBox"/>

            <TextBlock Text="Max HP" Margin="0,6,0,0"/>
            <TextBox x:Name="MaxHpBox"/>

            <!-- ANIMATIONS -->
            <TextBlock  Text="Animations"
                        FontWeight="Bold"
                        Margin="0,10,0,6"/>

            <TextBlock  Text="Idle Animation"/>
            <ComboBox x:Name="IdleAnimCombo" Margin="0,0,0,6"/>
            
            <TextBlock  Text="Walk Animation"/>
            <ComboBox x:Name="WalkAnimCombo" Margin="0,0,0,6"/>
            
            <TextBlock  Text="Hurt Animation"/>
            <ComboBox x:Name="HurtAnimCombo" Margin="0,0,0,6"/>
            
            <TextBlock  Text="Death Animation"/>
            <ComboBox x:Name="DeathAnimCombo" Margin="0,0,0,6"/>
            
            <!--ATTACK ANIMATIONS SPESIFIC-->
            <TextBlock Text="Attack Animations"
           FontWeight="Bold"
           Margin="0,12,0,4"/>

            <ListBox x:Name="AttackAnimList"
         Height="120"
         DisplayMemberPath="."
         Margin="0,0,0,6"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <ComboBox x:Name="AttackAnimCombo"
              Width="160"
              DisplayMemberPath="Id"/>

                <Button Content="Add"
            Width="60"
            Margin="6,0,0,0"
            Click="AddAttackAnim"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content="▲"
            Width="30"
            Click="MoveAttackUp"/>

                <Button Content="▼"
            Width="30"
            Margin="4,0,0,0"
            Click="MoveAttackDown"/>

                <Button Content="Remove"
            Width="80"
            Margin="6,0,0,0"
            Click="RemoveAttackAnim"/>
            </StackPanel>

            <!--Save Button-->
            <Button Content="Save Definitions"
                    Margin="0,10,0,0"
                    Click="SaveClicked"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>