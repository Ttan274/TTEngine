<UserControl x:Class="TTEngine.Editor.Panels.EntityDefinitionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Padding="10">
        <StackPanel>

            <TextBlock Text="Entity Definition"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,10"/>

            <StackPanel Margin="0,0,0,6">
                <TextBlock Text="Speed"/>
                <TextBox Height="24"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,6">
                <TextBlock Text="Attack Damage"/>
                <TextBox Height="24"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,6">
                <TextBlock Text="Attack Interval"/>
                <TextBox Height="24"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,6">
                <TextBlock Text="Max HP"/>
                <TextBox Height="24"/>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
