<UserControl x:Class="TTEngine.Editor.Panels.TileToolPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="#2B2B2B" Padding="10">
        <StackPanel>

            <!-- TILE SELECTION -->
            <TextBlock Text="Tiles"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,6"/>

            <ItemsControl   x:Name="TilePalette"
                            ItemsSource="{Binding TileDefinitions}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="40"
                                Height="40"
                                Margin="4"
                                Tag="{Binding Id}"
                                BorderThickness="1"
                                BorderBrush="DimGray"
                                Background="#2D2D2D"
                                MouseLeftButtonDown="OnTileClicked"
                                ToolTip="{Binding Name}"
                                Loaded="TileButtonLoaded">
                            <Image      Stretch="Uniform"
                                        Loaded="TileImageLoaded"/>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Separator/>

            <!-- BRUSH SIZE -->
            <TextBlock Text="Brush Size"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,8,0,4"/>

            <TextBlock x:Name="BrushSizeLabel"
                       Text="Size: 1x1"
                       Foreground="LightGray"
                       Margin="0,0,0,4"/>

            <Slider Minimum="1"
                    Maximum="3"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    ValueChanged="BrushSize_ValueChanged"/>

            <Separator Margin="0,8,0,8"/>

            <!-- TOOLS -->
            <TextBlock Text="Tools"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,4"/>

            <RadioButton Content="Brush"
                         GroupName="ToolGroup"
                         Foreground="White"
                         IsChecked="True"
                         Checked="Brush_Checked"/>

            <RadioButton Content="Fill"
                         GroupName="ToolGroup"
                         Foreground="White"
                         Margin="0,2,0,0"
                         Checked="Fill_Checked"/>

            <RadioButton Content="Player Spawn"
                         GroupName="ToolGroup"
                         Foreground="White"
                         Margin="0,6,0,0"
                         Checked="PlayerSpawn_Checked"/>

            <RadioButton Content="Enemy Spawn"
                         GroupName="ToolGroup"
                         Foreground="White"
                         Margin="0,2,0,8"
                         Checked="EnemySpawn_Checked"/>

            <Separator/>

            <!-- ACTIONS -->
            <Button Content="Save Map"
                    Margin="0,8,0,0"
                    Click="SaveMap_Click"/>

            <Button Content="Load Map"
                    Margin="0,4,0,0"
                    Click="LoadMap_Click"/>

            <Button Content="Start Game"
                    Margin="0,10,0,0"
                    Click="StartGame_Click"/>

        </StackPanel>
    </Border>
</UserControl>
